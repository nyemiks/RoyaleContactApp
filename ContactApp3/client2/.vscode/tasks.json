{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "actionscript",
			"debug": true,
			"asconfig": "client/asconfig.json",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "ActionScript: compile debug - client/asconfig.json"
		},		
        {
            "label": "[Project] Build with Maven",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-DskipTests"
            ],
            "problemMatcher": []
        },
        {
            "label": "[Project] Build with Maven - Droyalelib - ROYALE_HOME",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "install",
                "-Droyalelib=${env:ROYALE_HOME}\\frameworks",
                "-DskipTests"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
	]
}