{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "Launch Chrome (localhost debug)",
        "type": "chrome",
        "request": "launch",
        "sourceMaps": true,
        "url": "http://localhost:8080/xxx/index.html",
        "webRoot": "${workspaceFolder}/target/javascript/bin/js-debug"
        },
        {
            "name": "Launch File - Royal Contacts (Debug version)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "url": "file:///${workspaceRoot}/target/javascript/bin/js-debug/index.html",
            "webRoot": "${workspaceRoot}/target/javascript/bin/js-debug"
        },
        {
            "name": "Launch File Allow File Access - Royal Contacts (Debug version)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            //"runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
            "runtimeArgs": ["--allow-file-access-from-files", "--auto-ssl-client-auth"],
            "url": "file:///${workspaceRoot}/target/javascript/bin/js-debug/index.html",
            "webRoot": "${workspaceRoot}/target/javascript/bin/js-debug"
        },
        {
            "name": "Launch File Allow File Access - Royal Release",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            //"runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
            "runtimeArgs": [
                "--allow-file-access-from-files",
                "--auto-ssl-client-auth"
            ],
            "url": "file:///${workspaceRoot}/target/javascript/bin/js-release/index.html",
            "webRoot": "${workspaceRoot}/target/javascript/bin/js-release"
        }
    ]
}
